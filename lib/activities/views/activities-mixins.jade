mixin visitorCount(anzahl)
  p Bislang
    if (anzahl === 0)
      |  gibt es keine Teinahmezusagen.
    else if (anzahl === 1)
      |  hat ein Mitglied seine Teilnahme zugesagt.
    else
      |  haben #{anzahl} Mitglieder ihre Teilnahme zugesagt.


mixin subscriptionButtons(activity, resourceName, resourceRegistrationRenderer)
  result = resourceRegistrationRenderer.htmlRepresentationOf(activity, resourceName, accessrights.memberId())
  btnClass = result.isWithdrawal() ? 'btn-default' : 'btn-primary'
  if (activity.resourceNames().length === 1)
    if (!result.representsButton()) 
      #{result.displayText}
    else
      a(href="#{result.url}", class="btn #{btnClass}") #{result.displayText}
  else
    form.form-horizontal
      .form-group
        label.control-label.col-xs-6(style="text-align: left;") #{resourceName}:
        if (!result.representsButton()) 
          span.col-xs-6.control-label(style="text-align: center;") #{result.displayText}
        else
          a(href="#{result.url}", class="btn col-xs-6 #{btnClass}") #{result.displayText}
