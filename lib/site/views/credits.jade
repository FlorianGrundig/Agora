mixin defItem(title, url, text)
  dt #{title}:
  dd: a(href=url, target="_blank")
    i.fa.fa-external-link
    | &nbsp;#{text}

mixin externalUrl(url, text)
  a(href=url, target="_blank")
    i.fa.fa-external-link
    | &nbsp;#{text}


